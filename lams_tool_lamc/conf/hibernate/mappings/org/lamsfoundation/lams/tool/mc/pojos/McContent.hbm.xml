<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.pojos.McContent" 
    table="tl_lamc11_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

	<property
        name="mcContentId"
        type="java.lang.Long"
        column="content_id"
        not-null="true"
        length="20"
    >
    </property>
    
    <property
        name="title"
        type="java.lang.String"
        access="property"
        column="title"
        length="65535"
    />


    <property
        name="instructions"
        type="java.lang.String"
        access="property"        
        column="instructions"
        length="65535"
    />

    <property
        name="reflectionSubject"
        type="java.lang.String"
        access="property"
        column="reflectionSubject"
        length="65535"
    />


   <property
        name="defineLater"
        type="boolean"
        access="property"
        column="define_later"
        length="1"        
   />


    <property
        name="creationDate"
        type="java.util.Date"
        access="property"        
        column="creation_date"
        length="20"
    />


    <property
        name="updateDate"
        type="java.util.Date"
        access="property"        
        column="update_date"
        length="20"
    />

   <property
        name="submissionDeadline"
        type="java.util.Date"
        access="property"        
        column="submission_deadline"
        length="20"
    />

   <property
        name="questionsSequenced"
        type="boolean"
        access="property"
        column="questions_sequenced"
        length="1"        
   />

   <property
        name="reflect"
        type="boolean"
        access="property"
        column="reflect"
        length="1"        
   />

 
    <property
        name="createdBy"
        type="long"
        access="property"        
        column="created_by"
        length="20"
    />
    
    <property
        name="retries"
        type="boolean"
        access="property"        
        column="retries"
        length="1"
    />
    
   <property
        name="showReport"
        type="boolean"
        access="property"
        column="show_report"
        length="1"        
   />

    <property
        name="useSelectLeaderToolOuput"
        type="boolean"
        access="property"        
        column="use_select_leader_tool_ouput"
        length="1"
    />
    
    <property
        name="prefixAnswersWithLetters"
        type="boolean"
        access="property"        
        column="prefix_answers_with_letters"
        length="1"
    />

   <property
        name="showMarks"
        type="boolean"
        access="property"
        column="showMarks"
        length="1"        
   />
   
   <property
        name="randomize"
        type="boolean"
        access="property"
        column="randomize"
        length="1"        
   />

   <property
        name="displayAnswers"
        type="boolean"
        access="property"
        column="displayAnswers"
        length="1"        
   />

    
    <property
        name="passMark"
        type="java.lang.Integer"
        access="property"        
        column="pass_mark"
        length="1"
    />
    
    <property
        name="enableConfidenceLevels"
        type="boolean"
        update="true"
        insert="true"
        column="enable_confidence_levels"
    />
   
      <property
        name="displayFeedbackOnly"
        type="boolean"
        update="true"
        insert="true"
        column="display_feedback_only"
    />
 
   	 <set
            name="mcQueContents"
            order-by="display_order"
            lazy="true"
            inverse="true"
            cascade="all"
            sort="unsorted"
        >
              <key
                  column="mc_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.mc.pojos.McQueContent"
              />
    </set>


	<set
            name="mcSessions"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
              <key
                  column="mc_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.mc.pojos.McSession"
              />

    </set>


</class>
</hibernate-mapping>
