<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>


	<class name="org.lamsfoundation.lams.outcome.OutcomeScaleItem" table="lams_outcome_scale_item">

		<id name="itemId" type="java.lang.Long" column="item_id">
			<generator class="native" />
		</id>
		<property name="name" type="java.lang.String" column="name"
			length="255">
		</property>
		<property name="value" type="java.lang.Integer" column="value" />
		<!-- Associations -->
		<many-to-one name="scale"
			class="org.lamsfoundation.lams.outcome.OutcomeScale">
			<column name="scale_id" />
		</many-to-one>
	</class>
</hibernate-mapping>
