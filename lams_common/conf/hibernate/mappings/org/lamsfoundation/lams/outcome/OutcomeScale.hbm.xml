<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>


	<class name="org.lamsfoundation.lams.outcome.OutcomeScale" table="lams_outcome_scale">

		<id name="scaleId" type="java.lang.Long" column="scale_id">
			<generator class="native" />
		</id>
		<property name="name" type="java.lang.String" column="name"
			length="255">
		</property>
		<property name="code" type="java.lang.String" column="code"
			length="50">
		</property>
		<property name="contentFolderId" type="java.lang.String" column="content_folder_id"
			length="36">
		</property>
		<property name="createDateTime" type="java.sql.Timestamp"
			column="create_date_time" not-null="true" length="19">
		</property>
		<!-- Associations -->

		<many-to-one name="createBy"
			class="org.lamsfoundation.lams.usermanagement.User">
			<column name="create_by" />
		</many-to-one>

		<many-to-one name="organisation"
			class="org.lamsfoundation.lams.usermanagement.Organisation">
			<column name="organisation_id" />
		</many-to-one>
		
		<set name="items" lazy="false" inverse="true" cascade="all-delete-orphan">
	        <key><column name="scale_id" /></key>
	        <one-to-many class="org.lamsfoundation.lams.outcome.OutcomeScaleItem"/>        
    	</set>
	</class>
</hibernate-mapping>
